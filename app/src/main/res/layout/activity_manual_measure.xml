<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualMeasure">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="326dp"
        android:layout_height="40dp"
        android:layout_marginTop="96dp"
        android:fontFamily="sans-serif-black"
        android:text="Hasil Pengukuran Anda"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/glucose_level"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="160dp"
        android:hint="Masukkan angka"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:fontFamily="sans-serif-black"
        android:text="mg/dL"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/glucose_level"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/fasting_button"
            android:layout_width="130dp"
            android:layout_height="81dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#3F51B5"
            android:fontFamily="sans-serif-black"
            android:text="Puasa"
            android:textSize="15dp" />

        <Button
            android:id="@+id/non_fasting_button"
            android:layout_width="130dp"
            android:layout_height="81dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#3F51B5"
            android:fontFamily="sans-serif-black"
            android:text="Setelah Makan"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/showCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategorisasi Anda"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glucose_level"
        app:layout_constraintVertical_bias="0.182" />

</androidx.constraintlayout.widget.ConstraintLayout>
